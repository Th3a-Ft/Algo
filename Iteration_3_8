//While
int n=15;

void setup() {
  syracuse();
}

void syracuse() {
  println(n);
  while (n!=1) {
    if (n%2!=0) {
      n=(n*3)+1;
      println(n);
    } else {
      n=n/2;
      println(n);
    }
  }
}

//For
int n=15;

void setup() {
  syracuse();
}

void syracuse() {
println(n);
  for (;n!=1;) { //pas d'update donc prend la suite de la fonction
    if (n%2!=0) {
      n=(n*3)+1;
      println(n);
    } else {
      n=n/2;
      println(n);
    }
  }
}
